<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.screens.record.RecordActivity"
        android:theme="@style/ToolbarTheme">

    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/record_screen_name"
            app:titleTextColor="@color/colorText"
            android:elevation="4dp"/>

    <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="100sp"
            app:layout_constraintTop_toBottomOf="@id/my_toolbar"
            app:layout_constraintBottom_toTopOf="@id/btnStartRecording"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    <TextView
            android:text="@string/recording_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordingTextView"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/chronometer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
    />

    <ImageButton
            android:id="@+id/btnStartRecording"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/record_button"
            android:contentDescription="@string/record"
            android:elevation="2dp"
            android:src="@drawable/ic_mic_white_64dp"
            tools:targetApi="lollipop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"/>

    <ImageButton
            android:id="@+id/btnStopRecording"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/record_button"
            android:contentDescription="@string/stop_recording"
            android:elevation="2dp"
            android:src="@drawable/ic_stop_white_64dp"
            tools:ignore="UnusedAttribute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp"/>

    <ImageButton
            android:id="@+id/btnPlay"
            android:src="@drawable/ic_play_arrow_white_48dp"
            android:contentDescription="@string/play"
            android:elevation="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/record_button"
            tools:targetApi="lollipop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnStartRecording"
            app:layout_constraintTop_toTopOf="@id/btnStartRecording"
            app:layout_constraintBottom_toBottomOf="@id/btnStartRecording"
    />
    <ImageButton
            android:id="@+id/btnSave"
            android:src="@drawable/ic_save_ic"
            android:elevation="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/record_button"
            app:layout_constraintStart_toEndOf="@id/btnStartRecording"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnStartRecording"
            app:layout_constraintBottom_toBottomOf="@id/btnStartRecording"
            />

</android.support.constraint.ConstraintLayout>