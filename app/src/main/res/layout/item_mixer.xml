<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:orientation="vertical"
              android:layout_gravity="top"
              android:padding="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:orientation="horizontal"
                  android:id="@+id/mixerItem"
                  android:background="@drawable/category_background_nature">

        <android.support.constraint.ConstraintLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

            <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/itemSoundPlayBtn"
                    android:background="@null"
                    android:src="@drawable/ic_play_arrow_white_48dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            />

            <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/itemSoundStopBtn"
                    android:src="@drawable/ic_stop_white_64dp"
                    android:background="@null"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            />


        </android.support.constraint.ConstraintLayout>
        <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:paddingStart="5dp"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawablePadding="10dp"/>

        <TextView
                android:id="@+id/lengthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/removeSoundBtn"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_gravity="center"
                android:background="@null"
                android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="20dp"
                  android:orientation="horizontal"
                  android:theme="@style/Orange"
                  android:id="@+id/seekBarBase">
        <TextView
                android:id="@+id/volumeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume:"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/volumeSeekBar"/>

    </LinearLayout>


</LinearLayout>